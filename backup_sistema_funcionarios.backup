-- 1. Tabela de usuários
CREATE TABLE usuarios (
  id SERIAL PRIMARY KEY,
  nome_usuario VARCHAR(50) NOT NULL,
  senha VARCHAR(255) NOT NULL,
  cargo VARCHAR(30) NOT NULL,
  data_criacao TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  email VARCHAR(100) NOT NULL,
  nome VARCHAR(100) NOT NULL
);

-- 2. Tabela de solicitações
CREATE TABLE solicitacoes (
  id SERIAL PRIMARY KEY,
  nome VARCHAR(100) NOT NULL,
  cargo VARCHAR(50) NOT NULL,
  loja VARCHAR(50) NOT NULL,
  celular BOOLEAN DEFAULT false,
  notebook BOOLEAN DEFAULT false,
  chip BOOLEAN DEFAULT false,
  aprovado_por VARCHAR(100),
  data_cadastro TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  observacoes TEXT,
  finalizada BOOLEAN DEFAULT false
);

-- 3. Tabela de controle de funcionários
CREATE TABLE controle_funcionarios (
  id SERIAL PRIMARY KEY,
  nome VARCHAR(100) NOT NULL,
  cargo VARCHAR(50) NOT NULL,
  loja VARCHAR(50) NOT NULL,
  modelo_celular VARCHAR(100),
  modelo_notebook VARCHAR(100),
  modelo_chip VARCHAR(100),
  data_finalizacao TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);
